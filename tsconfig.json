{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    // "outDir": "",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    // "declaration": false,
    // "declarationDir": "dist/@type",
    "lib": [
      "es2015",
      "es2017",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/**/*",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/index.ts",
    "src/hammerjs/**/*",
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}